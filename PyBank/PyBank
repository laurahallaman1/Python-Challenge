    "# Import CSV and OS Dependencies\n",
    "import csv\n",
    "import os"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 39,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Load CSV and create output file\n",
    "budget_data = os.path.join(\"Resources\", \"/Users/lauraehallaman/Documents/GitHub/Python-Challenge/PyBank/PyBank.csv\")\n",
    "financial_analysis = os.path.join(\"Financial_Analysis\", \"/Users/lauraehallaman/Documents/GitHub/Python-Challenge/PyBank/FinancialAnalysis.txt\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 40,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Define the various financial metrics we will work with: \n",
    "\n",
    "# The total number of months included in the dataset\n",
    "total_months = 0\n",
    "month = []\n",
    "\n",
    "# The average of the changes in \"Profit/Losses\" over the entire period\n",
    "net_change_avg = []\n",
    "\n",
    "# The greatest increase in profits (date and amount) over the entire period\n",
    "greatest_increase = [\"\", 0]\n",
    "\n",
    "# The greatest decrease in losses (date and amount) over the entire period\n",
    "greatest_decrease = [\"\", 999999999999]\n",
    "\n",
    "# The net total amount of \"Profit/Losses\" over the entire period\n",
    "net_total = 0\n",
    "\n",
    "# Read in the csv and organize data into a list titled \"financial_data\" \n",
    "with open(budget_data) as financial_data:\n",
    "    reader = csv.reader(financial_data)\n",
    "\n",
    "    # Read in header\n",
    "    header = next(reader)\n",
    "\n",
    "    # Read in first row  \n",
    "    first_row = next(reader)\n",
    "    total_months = total_months + 1\n",
    "    total_net = total_net + int(first_row[1])\n",
    "    prev_net = int(first_row[1])\n",
    "\n",
    "    # For loop begins here \n",
    "    for row in reader:\n",
    "\n",
    "        # Add up total\n",
    "        total_months = total_months + 1\n",
    "        net_total = net_total + int(row[1])\n",
    "\n",
    "        # Calculate net change\n",
    "        net_change = int(row[1]) - prev_net\n",
    "        prev_net = int(row[1])\n",
    "        net_change_avg = net_change_avg + [net_change]\n",
    "        month = month + [row[0]]\n",
    "\n",
    "        # Calculate greatest increase\n",
    "        if net_change > greatest_increase[1]:\n",
    "            greatest_increase[0] = row[0]\n",
    "            greatest_increase[1] = net_change\n",
    "\n",
    "        # Calculate greatest decrease\n",
    "        if net_change < greatest_decrease[1]:\n",
    "            greatest_decrease[0] = row[0]\n",
    "            greatest_decrease[1] = net_change\n",
    "\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 41,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Average change month over month calcuation \n",
    "net_monthly_avg = sum(net_change_avg) / len(net_change_avg)\n",
    "\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 42,
